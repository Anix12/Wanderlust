/* --------------------------------------------- */
/* General Styles for Form */
form {
    position: relative; /* Ensure the suggestions dropdown is positioned relative to the form */
}

/* Search Input Field */
.search-input {
    border: 1px solid #ccc;
    border-radius: 20px;
    padding: 0.5rem 3rem;
    width: 100%; /* Full width */
    transition: box-shadow 0.3s ease, border 0.3s ease;
}

.search-input:focus {
    outline: none;
    box-shadow: 0 0 5px rgba(189, 10, 10, 0.5);
    border-color: #fe424d; /* Highlight on focus */
}
    
/* Search Button */
.search-btn {
    background-color: #fe424d;
    color: white;
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    transition: background-color 0.3s ease;
    cursor: pointer;
}

.search-btn:hover {
    background-color: #fe424d;
}

/* Suggestions Dropdown */
.suggestions-list {
    list-style: none;
    margin: 0;
    padding: 0;
    width: 100%; /* Match the width of the input field */
    background-color: white;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    border: 1px solid #ddd;
    border-radius: 5px;
    position: absolute;
    top: 100%; /* Position directly below the input field */
    left: 0;
    z-index: 1000; /* Ensure it appears above other elements */
    display: none; /* Hidden by default */
    max-height: 200px; /* Limit the height for scrollability */
    overflow-y: auto; /* Enable scrolling for long lists */
}

/* Show Suggestions */
.suggestions-list.show {
    display: block;
}

/* Suggestion Items */
.suggestions-list li {
    padding: 0.5rem 1rem;
    cursor: pointer;
    transition: background-color 0.2s ease;
}

.suggestions-list li:hover {
    background-color: #f8f9fa; /* Light hover effect */
}

/* Mobile Adjustments */
@media (max-width: 768px) {
    .search-input {
        font-size: 0.9rem;
    }

    .search-btn {
        font-size: 0.9rem;
        padding: 0.4rem 0.8rem;
    }

    .suggestions-list li {
        font-size: 0.9rem;
    }
}


</style>

