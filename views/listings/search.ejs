<% layout("/layout/boilerplate.ejs") %>
<link rel="stylesheet" href="/css/style.css">
<link rel="stylesheet" href="/css/filter.css">

<!-- Filters Section -->
<div class="filters">
    <div class="tax-toggle btn btn-dark">
        <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
        </div>
    </div>
</div>

<!-- Listings Section -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% if (allListings && allListings.length > 0) { %>
        <% allListings.forEach(listing => { %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card col listing-card">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="listing-image" style="height: 20rem;">

                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b><%= listing.title %></b><br>
                            &#8377; <%= listing.price.toLocaleString("en-IN") %>
                            <i class="tax-info" style="display: none;"> &nbsp; +&nbsp;18% GST</i>
                        </p>
                    </div>
                </div>
            </a>
        <% }) %>
    <% } else { %>
        <!-- No Listings Found -->
        <div class="text-center m-auto">
            <p class="mt-3" style="font-size: 1.5rem; color: #e74c3c; font-weight: bold;">Something Went Wrong</p>
            <p style="font-size: 1rem; color: #555;">Your search listing is not created yet!</p>
        </div>
    <% } %>
</div>

<!-- Script for Tax Toggle -->
<script>
    document.getElementById("flexSwitchCheckDefault").addEventListener("click", () => {
        const taxInfoElements = document.querySelectorAll(".tax-info");
        taxInfoElements.forEach(info => {
            info.style.display = info.style.display === "none" ? "inline" : "none";
        });
    });
</script>
