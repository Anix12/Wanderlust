
<% layout("/layout/boilerplate.ejs") %>

    <body>
        <br><br>
        <h3>Create a New Listing</h3>
        <form method="post" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
            <div>
                <div class="col-9 offset-1">
                    <label for="title" class="form-label">title</label>
                    <input type="text" name="listing[title]" placeholder="Enter title" class="form-control" required>
                    <div class="valid-feedback">
                        <b>Looks good!</b>
                    </div>
                    <div class="invalid-feedback">
                        Please choose a Title.
                    </div>
                </div>
                <div class="col-9 offset-1">
                    <label for="description" class="form-label">description</label>
                    <textarea name="listing[description]" placeholder="Enter description" class="form-control"
                        required></textarea>
                    <div class="valid-feedback">
                        Looks good Property!
                    </div>
                    <div class="invalid-feedback">
                        Please Enter Your Description.
                    </div>

                </div>
                <div class="col-9 offset-1">
                    <label for="image" class="form-label">Upload Image</label>
                    <input type="file" name="listing[image]" class="form-control">
                </div>
                <!-- price-country -->
                <div class="row col-9 offset-1">
                    <div class="mb-1 col-md-4">
                        <label for="price" class="form-label col-4">Price</label>
                        <input name="listing[price]" placeholder="Enter price" class="form-control" required>
                        <div class="valid-feedback">
                            Wow This is Affordable Price!
                        </div>
                        <div class="invalid-feedback">
                            Please Enter Affordable Price.
                        </div>
                    </div>
                    <div class="mb-1 col-md-8 ">
                        <label for="country" class="form-label">country</label>
                        <input type="text" name="listing[country]" placeholder="Enter country" class="form-control"
                            required>
                        <div class="invalid-feedback">
                            Please Enter Country Name.
                        </div>
                    </div>
                </div>
                <div class="row col-9 offset-1">
                    <div class="mb-1 col-md-8">
                        <label for="location" class="form-label">location</label>
                        <input type="text" name="listing[location]" placeholder="Enter location" class="form-control"
                            required>
                        <div class="invalid-feedback">
                            Please Enter Location.
                        </div>
                    </div>
                    <div class="mb-1 col-md-4 ">
                        <label for="kind" class="form-label">Type</label>
                        <select name="listing[kind]" class="form-control" required>
                            <option value="Trending">Trending</option>
                            <option value="Rooms">Rooms</option>
                            <option value="Mountains">Mountains</option>
                            <option value="castles">Castles</option>
                            <option value="Farms">Farms</option>
                            <option value="Arctic">Arctic</option>
                            <option value="Amazing pools">Amazing Pools</option>
                            <option value="Iconic Cities">Iconic Cities</option>
                        </select>
                        <div class="invalid-feedback">
                            Please Enter kind Name Ex("farm, swim").
                        </div>
                    </div>
                </div>
                <button class="btn btn-dark mt-4 col-1 offset-1">Add</button>
                <br><br><br>
            </div>
        </form>

    </body>